<div class="ibox float-e-margins">
    <div class="ibox-title">
    </div>
    <div class="ibox-content">
        <form method="post" class="form-horizontal" id="uploadapk" enctype="multipart/form-data">

            <div class="form-group"><label class="col-sm-2 control-label">Seleccione el archivo apk:</label>
                <div class="col-sm-10">
                    <div id="cover_dropzone" class="fileupload-buttonbar">
                        <span class="btn fileinput-button">
                                <span>Seleccionar archivo</span>
                                <input id="location_cover" type="file" name="userimg" accept=".apk">
                        </span>

                        <div id="cover_progress" class="progress progress-mini" role="progressbar" aria-valuemin="0" aria-valuemax="100">
                            <div class="progress-bar"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-2">
                    <!--<input type="button" class="btn btn-primary" id="guardar" value="Guardar"/>-->
                    <button title="Regresar" type="button" id="guardar" class="btn btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#guardar').click(function () {
            setTimeout(function(){
                $(window).attr('location','/admin/');
            }, 1000);
        });
    });
</script>
<script src="/js/apk_upload.js"></script>